<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/card_bg"
        android:backgroundTint="@color/slate_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/slate_grey"
            android:orientation="vertical">

            <TextView
                android:id="@+id/up_course_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="@color/mango_yellow"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/slate_grey"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/up_course_fee"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="@color/sky_blue"
                android:drawableLeft="@drawable/ic_rupee"
                android:drawableRight="@drawable/tap_icon"
                android:drawablePadding="10dp"
                android:hint="Fee"
                android:inputType="number"
                android:fontFamily="@font/righteous"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/slate_grey"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/up_delete_btn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="@color/light_deep_purple"
                android:src="@drawable/ic_delete_forever"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/up_edit_btn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="@color/greenish"
                android:src="@drawable/edit_icon"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>