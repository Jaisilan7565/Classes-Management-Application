<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/white_background"
        android:backgroundTint="@color/black"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left_slide_bg"
                android:fontFamily="@font/righteous"
                android:padding="4dp"
                android:text=" Due Date: "
                android:textColor="@color/cream"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/add_duedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rs_student_bg"
                android:fontFamily="@font/righteous"
                android:hint="31 / 12 / 2023"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/black"
                android:textColorHint="@color/slate_grey"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left_slide_bg"
                android:fontFamily="@font/righteous"
                android:padding="4dp"
                android:layout_marginLeft="2dp"
                android:text=" Fee: "
                android:textColor="@color/cream"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/add_due_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rs_student_bg"
                android:fontFamily="@font/righteous"
                android:hint="99999"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/slate_grey"
                android:textSize="18sp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left_slide_bg"
                android:fontFamily="@font/righteous"
                android:padding="4dp"
                android:text=" Paid Date: "
                android:textColor="@color/cream"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/add_paid_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_rs_bg"
                android:ems="10"
                android:drawableRight="@drawable/tap_icon"
                android:paddingRight="10dp"
                android:fontFamily="@font/righteous"
                android:hint="Fee Paid Date"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/slate_grey"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/black"
                android:orientation="horizontal"
                android:padding="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/paid_submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:backgroundTint="@color/greenish"
                    android:fontFamily="@font/righteous"
                    android:text="Paid"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>